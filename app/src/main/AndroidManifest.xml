<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.htwberlin.f4.ai.ma.indoorroutefinder">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.NodeListActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.MaxPictureActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.NodeShowActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.ShowFingerprintActivity"/>
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.ImportExportActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.EdgesManagerActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.RouteFinderActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.LocationActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.SettingsActivity" />

        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.android.measure.MeasureViewImpl" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.android.measure.barcode.BarcodeCaptureActivity" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.android.record.RecordViewImpl" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.android.calibrate.CalibrateViewImpl" />
        <activity android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.android.measure.edges.EdgeDetailsViewImpl"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name="de.htwberlin.f4.ai.ma.indoorroutefinder.NodeRecordEditActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>


    <provider android:authorities="ourContentProviderAuthorities"
        android:name=".ContentProviderDB"
        android:exported="false"
        android:syncable="true"/>/>

</manifest>